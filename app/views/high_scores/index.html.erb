
<%= will_paginate @leader_scores %>


<div class="center hero-unit">

<table class="table table-striped table-bordered table-hover">
<th class="warning" colspan="3">Leader Board</th>
<tr>
	<td>#</td><td>Points</td><td>Player</td>
</tr>
 <% @count = @leader_scores.offset + 1 %>
	<% @leader_scores.each_with_index do |s, i| %>
		<tr>
			<td>
				<%= "#{(i.to_i + @count).ordinalize}"%>
			</td>
			<td>  
				<%= s.score.to_s %>
			</td>
			<td>
				<%= link_to User.find(s.user_id).name,  User.find(s.user_id)%>
			</td>
		</tr>
		<% end %>
</table>
</div>
   	
