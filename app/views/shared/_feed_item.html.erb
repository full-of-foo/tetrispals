<li id="<%= feed_item.id %>">
  <% if feed_item.user.image_url %>
          <%= link_to image_tag(feed_item.user.image_url.to_s, size: "52x52", class: "gravatar"), feed_item.user %>
      <% else %>
        <%= link_to gravatar_for(feed_item.user, "52x52"), feed_item.user %>
      <% end %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="content"><%= wrap(feed_item.content) %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
   <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.content %>
  <% end %>
</li>