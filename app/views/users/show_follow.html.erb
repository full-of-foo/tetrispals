<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
<% if @user.image_url %>
          <%= image_tag @user.image_url.to_s, size: "42x42", class: "gravatar"%>
      <% else %>
        <%= gravatar_for @user, "40x40" %>
      <% end %>      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, 10), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>